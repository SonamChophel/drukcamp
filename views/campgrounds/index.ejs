        
<%- include('../partials/header')%>


<div class="container">
    <div class="jumbotron">
        <h1>Welcome To DrukCamp!!</h1>
        <p>View and choose the campgrounds you like all over the Bhutan</p>
        <a href="/campgrounds/new" class="btn btn-primary">Add Campgrounds</a>
    </div>

    <div class="row text-center">
    <%campgrounds.forEach(function(campground){ %>
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="img-thumbnail">
                <img src="<%=campground.image%>" class="img-thumbnail">
                <div class="caption">
                    <h4><%=campground.name%></h4>
                </div>
                <p><a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a></p>
            </div>
        </div>    
    <% }); %>
    </div>
</div>

<%- include('../partials/footer')%>
